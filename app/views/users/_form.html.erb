<%= form_with model: user do |form| %>
  <div>
    <!--<%= form.label :username %><br>-->
    <%= form.text_field :username, placeholder: "Your username" %>
    <% user.errors.full_messages_for(:username).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <!--<%= form.label :email %><br>-->
    <%= form.text_field :email, placeholder: "example@exp.com" %><br>
    <% user.errors.full_messages_for(:email).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

    <div>
    <!--<%= form.label :password %><br>-->
    <%= form.password_field :password, placeholder: "Your password" %><br>
    <% user.errors.full_messages_for(:password).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
